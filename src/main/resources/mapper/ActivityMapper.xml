<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tencent.wxcloudrun.dao.ActivityMapper">


    <insert id="createActivity" parameterType="Activity">
        INSERT INTO activity (title,startDate,location,price,capacity,imgs,additionalInfo,description,userJoined) values (#{title},#{startDate},#{location},#{price},#{capacity},#{imgs},#{additionalInfoJSON},#{description},#{userJoinedListJSON})
    </insert>

    <update id="updateActivity" parameterType="Activity">
        UPDATE activity SET title=#{title},startDate=#{startDate},location=#{location},price=#{price},capacity=#{capacity},imgs=#{imgs},additionalInfo=#{additionalInfoJSON},description=#{description} WHERE id=#{id}
    </update>

    <select id="getActivity" parameterType="String">
        SELECT * FROM activity WHERE id=#{id}
    </select>



</mapper>